{
    "manifest_version": 2,
    "name": "Jorne",
    "version": "0.0.0",

    "description": "Client for Jorne, an incremental reading tool",

    "icons": {
        "48": "icons/jorne-48.png",
        "96": "icons/jorne-96.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*.wikipedia.org/*"],
            "js": ["jorne.js"]
        }
    ]
}
