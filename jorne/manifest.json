{
    "manifest_version": 2,
    "name": "Jorne",
    "version": "0.0.0",

    "description": "Client for Jorne, an incremental reading tool",

    "icons": {
        "48": "icons/jorne-48.png",
        "96": "icons/jorne-96.png"
    },

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "icons/jorne-96.png",
        "default_title": "Add Article to Jorne",
        "default_popup": "popup/add_article.html"
    }
}
